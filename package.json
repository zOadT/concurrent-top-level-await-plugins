{
  "name": "concurrent-top-level-await-plugins",
  "private": true,
  "description": "Bundler plugins enabling concurrent execution of modules that contain top level await.",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive run build",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zOadT/concurrent-top-level-await-plugins.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Oliver Zell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zOadT/concurrent-top-level-await-plugins/issues"
  },
  "homepage": "https://github.com/zOadT/concurrent-top-level-await-plugins#readme",
  "devDependencies": {
    "prettier": "3.7.4",
    "tsdown": "^0.17.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
